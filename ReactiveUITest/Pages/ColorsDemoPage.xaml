<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ReactiveUITest.Pages.ColorsDemoPage"
    xmlns:vm="clr-namespace:ReactiveUITest.ViewModels"
    BindingContext="{x:StaticResource colorsdemoviewmodel}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:ColorsDemoViewModel x:Key="colorsdemoviewmodel" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <Label Text="Red"
               Margin="3" />
        <Slider Minimum="0"
                Maximum="255"
                Value="{Binding Red}" />

        <Label Text="Blue"
               Margin="3" />
        <Slider Minimum="0"
                Maximum="255"
                Value="{Binding Blue}" />

        <Label Text="Green"
               Margin="3" />
        <Slider Minimum="0"
                Maximum="255"
                Value="{Binding Green}" />

        <BoxView Color="{Binding BackgroundColor}"
                 VerticalOptions="FillAndExpand"
                 Margin="10" />
    </StackLayout>
</ContentPage>
